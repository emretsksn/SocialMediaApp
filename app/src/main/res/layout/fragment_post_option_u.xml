<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_background"
    tools:context=".ui.fragment.post.PostOptionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:foreground="@drawable/ic_fragment_line"
            android:foregroundGravity="center"
            app:tint="#00FFFFFF" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/options"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pm_image_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:drawablePadding="8dp"
            android:drawingCacheQuality="auto"
            android:paddingVertical="16dp"
            android:text="@string/title_download"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:typeface="normal"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_download" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pm_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:drawablePadding="8dp"
            android:drawingCacheQuality="auto"
            android:paddingVertical="16dp"
            android:text="@string/save"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:typeface="normal"
            app:drawableStartCompat="@drawable/ic_bookmark_add" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pm_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:drawablePadding="8dp"
            android:drawingCacheQuality="auto"
            android:paddingVertical="16dp"
            android:text="@string/post_alert_view"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:typeface="normal"
            app:drawableStartCompat="@drawable/ic_view_icon" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pm_editpost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/post_alert_edit"
            android:layout_marginHorizontal="16dp"
            android:drawablePadding="8dp"
            android:drawingCacheQuality="auto"
            android:paddingVertical="16dp"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:typeface="normal"
            app:drawableStartCompat="@drawable/ic_edit" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pmArchive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:drawablePadding="8dp"
            android:drawingCacheQuality="auto"
            android:paddingVertical="16dp"
            android:text="@string/archive"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:typeface="normal"
            app:drawableStartCompat="@drawable/ic_archive_add" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pm_deletepost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:drawablePadding="8dp"
            android:drawingCacheQuality="auto"
            android:paddingVertical="16dp"
            android:text="@string/post_alert_delete"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:typeface="normal"
            app:drawableStartCompat="@drawable/ic_delete" />

    </LinearLayout>
</FrameLayout>