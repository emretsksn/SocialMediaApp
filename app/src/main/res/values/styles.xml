<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="navigationIcon">@drawable/ic_subject</item>
    </style>

    <style name="textInputBackground" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/icon_background</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="counterOverflowTextColor">?attr/colorTertiary</item>
        <item name="counterTextColor">?attr/colorTertiary</item>
        <item name="prefixTextColor">?attr/colorTertiary</item>
        <item name="suffixTextColor">?attr/colorTertiary</item>
        <item name="helperTextTextColor">?attr/colorTertiary</item>
        <item name="hintTextColor">?attr/colorTertiary</item>
        <item name="placeholderTextColor">@color/passive_icon</item>
        <item name="android:textColorHint">?attr/colorTertiary</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="customAlert" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@drawable/bg_popup_background</item>
    </style>

    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">4dp</item>
        <item name="elevation">1dp</item>
        <item name="iconTint">@color/icon_background</item>
    </style>


    <style name="actionBarTheme" parent="Widget.MaterialComponents.Toolbar">
        <item name="homeAsUpIndicator">@drawable/ic_arrow_left</item>
        <item name="iconTint">@color/icon_background</item>
        <item name="android:background">@color/appbar_background</item>
        <item name="animateMenuItems">true</item>
        <item name="logoAdjustViewBounds">true</item>
        <item name="popupMenuBackground">@drawable/bg_popup_background</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:elevation">16dp</item>
    </style>

    <style name="appBarTheme" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:elevation">16dp</item>
        <item name="android:shadowDy">1</item>
        <item name="addElevationShadow">true</item>
        <item name="android:background">@color/appbar_background</item>
        <item name="popupMenuBackground">@drawable/bg_popup_background</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>
    <style name="bottomNavTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:elevation">16dp</item>
        <item name="addElevationShadow">true</item>
        <item name="android:background">@color/bottomNavBackground</item>
        <item name="itemActiveIndicatorStyle">@color/bottomnav_item_color</item>
        <item name="itemIconTint">@color/bottomnav_item_color</item>
        <item name="itemTextColor">@color/bottomnav_item_color</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="colorContainer">@color/black</item>
    </style>

    <style name="PopupMenu" parent="Base.Theme.Tpost">
        <item name="background">@drawable/bg_popup_background</item>
    </style>

</resources>